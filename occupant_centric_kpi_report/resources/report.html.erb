<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Occupant-centric Key Performance Indicators (KPIs)</title>
  <!--for Bootstrap 3-->
  <!--  <link href="http://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">-->
  <!--  <script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>-->
  <!--  <script type="text/javascript" src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>-->

  <!--for Bootstrap 4-->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
  <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0/dist/Chart.min.js"></script>
  <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/jquery@3.3.1/dist/jquery.min.js"></script>
  <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/tablesorter@2.31.1/dist/js/jquery.tablesorter.min.js"></script>
  <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
  <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js"></script>

  <script type="text/javascript" src='https://cdn.plot.ly/plotly-latest.min.js'></script>
  <script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/d3/3.4.8/d3.min.js"></script>
  <script type="text/javascript" src="http://dimplejs.org/dist/dimple.v2.1.2.min.js"></script>
  <style>
    body {
      position: relative;
      height: 100%;
    }

    div.col-md-3 {
      padding-left: 0;
    }

    #tocItems {
      margin-top: 40px;
      z-index: 1;
    }

    #tocItems > .nav > li > a {
      padding-top: 4px;
      padding-bottom: 4px;
    }

    .btn {
      margin: 0 3px;
    }

    .bs-docs-sidebar.affix {
      margin-left: 15px;
      position: static;
    }

    .bs-docs-sidebar.well {
      padding: 0;
    }

    /* sidebar */
    .bs-docs-sidebar {
      padding-left: 20px;
      padding-bottom: 20px;
    }

    @media (min-width: 1500px) {
      .container {
        max-width: 1450px;
      }
    }

    /* Show and affix the side nav when space allows it */
    @media (min-width: 992px) {
      .bs-docs-sidebar .nav > .active > ul {
        display: block;
      }

      /* Widen the fixed sidebar */
      .bs-docs-sidebar.affix,
      .bs-docs-sidebar.affix-bottom {
        width: 213px;
      }

      .bs-docs-sidebar.affix {
        position: fixed; /* Undo the static from mobile first approach */
      }

      .bs-docs-sidebar.affix-bottom {
        position: absolute; /* Undo the static from mobile first approach */
      }
    }

    @media (min-width: 1200px) {
      /* Widen the fixed sidebar again */
      .bs-docs-sidebar.affix-bottom,
      .bs-docs-sidebar.affix {
        width: 263px;
      }
    }

    /* make sidebar scrollable */
    .bs-docs-sidebar > ul {
      overflow-y: auto;
      height: 85vh;
      padding: 10px;
    }

    @media (max-width: 991px) {
      #tocItems {
        margin-top: 10px;
      }

      .bs-docs-sidebar > ul {
        max-height: 300px;
      }
    }
  </style>
  <script type="text/javascript">
      // This variable will be an array of graph data
      var nine = <%= @test_nine_data || 'null' %>;
  </script>
</head>
<body data-spy="scroll" data-target="#tocItems">
<div id="content" class="container-fluid">
  <!--  ##################################################################################-->
  <div class="container marketing pt-1">
    <div class="mt-3 p-3 rounded box-shadow" style="background-color: #263b6a">
      <h2 class="text-center" style="color: whitesmoke"><b>OpenStudio Results</b></h2>
      <h4 class="text-center" style="color: whitesmoke"><b>Occupant-centric KPIs</b></h4>
      <% chart_index = table_index = 0 %>
    </div>
    <div>
      <br>
      <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
          <% @sections.each_with_index do |section, index| %>
            <% next if not section %>
            <% if index == 0 %>
              <a class="nav-item nav-link active" id="nav-interface-tab" data-toggle="tab"
                 href="#<%= section[:title].gsub(' ', '_').gsub('/', '_') %>" role="tab" aria-controls="nav-interface"
                 aria-selected="false"><%= section[:title] %></a>
            <% else %>
              <a class="nav-item nav-link" id="nav-interface-tab" data-toggle="tab"
                 href="#<%= section[:title].gsub(' ', '_').gsub('/', '_') %>" role="tab" aria-controls="nav-interface"
                 aria-selected="false"><%= section[:title] %></a>
            <% end %>
          <% end %>
        </div>
      </nav>
      <div class="tab-content" id="nav-tabContent">
        <% @sections.each_with_index do |section, index| %>
          <% next if not section %>
          <% if index == 0 %>
            <div class="tab-pane fade show active" id="<%= section[:title].gsub(' ', '_').gsub('/', '_') %>" role="tabpanel" aria-labelledby="nav-interface-tab">
          <% else %>
            <div class="tab-pane fade" id="<%= section[:title].gsub(' ', '_').gsub('/', '_') %>" role="tabpanel" aria-labelledby="nav-interface-tab">
          <% end %>
          <div class="card card-body pb-3">
            <div class="col-12">
              <!--<h5 class="pb-1"><%#= section[:title] %></h5>-->
              <!--Messages-->
              <% if section[:messages] %>
                <% section[:messages].each do |message| %>
                  <h5><i><%= message %></i></h5>
                <% end %>
              <% elsif section[:tables].size == 0 %>
                <h5><i>No Data to Show for <%= section[:title] %></i></h5>
              <% end %>
              <!--Tables-->
              <h4>Single-value KPIs</h4>
              <% section[:tables].each do |table| %>
                <% next if not table %>
                <a class="pl-0" data-toggle="collapse" href="<%= "#table_#{table_index}" %>" aria-expanded="true">
                  <%= table[:title] %>
                </a>
                <div class="collapse show pt-2" id=<%= "table_#{table_index}" %>>
                  <div class="well">
                    <% if table.has_key?(:data_color) %>
                      <table class="table table-bordered table-condensed table-sm table-hover">
                    <% else %>
                      <table class="table table-striped table-bordered table-condensed table-sm table-hover">
                    <% end %>
                    <tr style="text-align: center">
                      <% table[:header].each_with_index do |header, header_index| %>
                        <% if not table[:units] or table[:units][header_index] == '' or not table[:units][header_index] %>
                          <th><%= header %></th>
                        <% else %>
                          <th><%= "#{header} (#{table[:units][header_index]})" %></th>
                        <% end %>
                      <% end %>
                    </tr>
                    <% table[:data].each_with_index do |row, row_index| %>
                      <tr style="text-align: center">
                        <% row.each_with_index do |column, column_index| %>
                          <% if column.class.to_s == 'Hash' and column.key?(:sub_header) %>
                            <td><h5><b><i>(<%= column[:sub_header] %>)</i></b></h5></td>
                          <% else %>
                            <% if table.has_key?(:data_color) %>
                              <td style="background-color:<%= "#{table[:data_color][row_index][column_index]}" %>"><%= column %></td>
                            <% else %>
                              <td><%= column %></td>
                            <% end %>
                          <% end %>
                        <% end %>
                      </tr>
                    <% end %>
                    </table>
                    <% if table.has_key?(:KPI_descriptions) %>
                      <% table[:KPI_descriptions].each_with_index do |desc, index| %>
                        <p class="pl-2"><%= desc %></p>
                      <% end %>
                    <% end %>
                    <% table_index += 1 %>
                  </div>
                </div>
              <% end %>

            </div>
          </div>
          <div class="card card-body">
            <div class="col-12 pt-2">
              <!--Line Chart divs-->
              <% if section[:hash_KPI_line_charts] %>
                <% if section[:hash_KPI_line_charts].length > 0 %>
                  <h4>Overall Plots</h4>
                <% end %>
                <% section[:hash_KPI_line_charts].each do |hash_KPI_line_chart| %>
                  <div id=<%= "plotly_div_#{hash_KPI_line_chart[:chart_div]}" %>></div>
                  <hr>
                <% end %>
              <% end %>
              <!--Timeseries Chart divs-->
              <% if section[:hash_KPI_ts_charts] %>
                <% if section[:hash_KPI_ts_charts].length > 0 %>
                  <h4>Time-series Plots</h4>
                <% end %>
                <% section[:hash_KPI_ts_charts].each do |hash_KPI_ts_chart| %>
                  <div id=<%= "plotly_div_#{hash_KPI_ts_chart[:chart_div]}" %>></div>
                  <hr>
                <% end %>
              <% end %>
              <!--Stacked-bar Chart divs-->
              <% if section[:hash_KPI_stacked_bar_charts] %>
                <% if section[:hash_KPI_stacked_bar_charts].length > 0 %>
                  <h4>Stacked Bar Plots</h4>
                <% end %>
                <% section[:hash_KPI_stacked_bar_charts].each do |hash_KPI_sb_chart| %>
                  <div id=<%= "plotly_div_#{hash_KPI_sb_chart[:chart_div]}" %>></div>
                  <div class="pl-3">
                    <h6>About this KPI:</h6>
                    <p><%= hash_KPI_sb_chart[:KPI_description] %></p>
                  </div>
                <% end %>
              <% end %>
              <!--Heatmap Chart divs-->
              <% if section[:hash_KPI_heatmaps] %>
                <% if section[:hash_KPI_heatmaps].length > 0 %>
                  <h4>Heatmaps</h4>
                <% end %>
                <% section[:hash_KPI_heatmaps].each do |hash_KPI_sb_chart| %>
                  <div id=<%= "plotly_div_#{hash_KPI_sb_chart[:chart_div]}" %>></div>
                <% end %>
              <% end %>
            </div>
          </div>
          </div>
        <% end %>

        </div>
      </div>
    </div>
    <!--  ##################################################################################-->

  </div>
</div>


<% @sections.each_with_index do |section, index| %>
  <% next if not section %>

  <!--  General line chart-->
  <% if section[:hash_KPI_line_charts] %>
    <% section[:hash_KPI_line_charts].each do |hash_KPI_line_chart| %>
      <script>
          var data = [<%= hash_KPI_line_chart[:chart_data].join(',') %>];
          var layout = {
              title: '<%= hash_KPI_line_chart[:title] %>',
              xaxis: {
                  title: '<%= hash_KPI_line_chart[:xaxis_label]%>',
                  type: 'scatter'
              },
              yaxis: {
                  title: '<%= hash_KPI_line_chart[:yaxis_label]%>',
                  autorange: true,
                  type: 'scatter'
              },
              width: 1250,
              height: 400,
          };
          Plotly.newPlot('<%= "plotly_div_#{hash_KPI_line_chart[:chart_div]}" %>', data, layout);
      </script>
    <% end %>
  <% end %>

  <!--  Time-series chart-->
  <% if section[:hash_KPI_ts_charts] %>
    <% section[:hash_KPI_ts_charts].each do |hash_KPI_ts_chart| %>
      <script>
          var data = [<%= hash_KPI_ts_chart[:chart_data].join(',') %>];
          var layout = {
              title: '<%= hash_KPI_ts_chart[:title] %>',
              xaxis: {
                  title: '<%= hash_KPI_ts_chart[:xaxis_label]%>',
                  autorange: true,
                  range: ['<%= hash_KPI_ts_chart[:date_range][0]%>', '<%= hash_KPI_ts_chart[:date_range][0]%>'],
                  rangeselector: {
                      buttons: [
                          {
                              count: 1,
                              label: '1m',
                              step: 'month',
                              stepmode: 'backward'
                          },
                          {
                              count: 6,
                              label: '6m',
                              step: 'month',
                              stepmode: 'backward'
                          },
                          {step: 'all'}
                      ]
                  },
                  rangeslider: {range: ['<%= hash_KPI_ts_chart[:date_range][0]%>', '<%= hash_KPI_ts_chart[:date_range][0]%>']},
                  type: 'date'
              },
              yaxis: {
                  title: '<%= hash_KPI_ts_chart[:yaxis_label]%>',
                  autorange: true,
                  type: 'linear'
              },
              width: 1350,
              height: 500,
          };
          Plotly.newPlot('<%= "plotly_div_#{hash_KPI_ts_chart[:chart_div]}" %>', data, layout);
      </script>
    <% end %>
  <% end %>

  <!--  Stacked bar chart-->
  <% if section[:hash_KPI_stacked_bar_charts] %>
    <% section[:hash_KPI_stacked_bar_charts].each do |hash_KPI_sb_chart| %>
      <script>
          var data = [<%= hash_KPI_sb_chart[:chart_data].join(',') %>];
          var layout = {
              title: '<%= hash_KPI_sb_chart[:title] %>',
              barmode: 'stack',
              xaxis: {
                  title: '<%= hash_KPI_sb_chart[:xaxis_label]%>',
              },
              yaxis: {
                  title: '<%= hash_KPI_sb_chart[:yaxis_label]%>',
              },
              width: 1350,
              height: 500,
          };
          Plotly.newPlot('<%= "plotly_div_#{hash_KPI_sb_chart[:chart_div]}" %>', data, layout);
      </script>
    <% end %>
  <% end %>
  <% if section[:hash_KPI_heatmaps] %>
    <% section[:hash_KPI_heatmaps].each do |hash_KPI_heatmap| %>
      <script>
          var data = [<%= hash_KPI_heatmap[:chart_data].join(',') %>];
          var layout = {
              title: '<%= hash_KPI_heatmap[:title] %>',
              // barmode: 'stack',
              xaxis: {
                  title: '<%= hash_KPI_heatmap[:xaxis_label]%>',
                  tickmode: 'linear',
              },
              yaxis: {
                  title: '<%= hash_KPI_heatmap[:yaxis_label]%>',
              },
              width: 1300,
              margin: {l: 180}
          };
          Plotly.newPlot('<%= "plotly_div_#{hash_KPI_heatmap[:chart_div]}" %>', data, layout);
      </script>
    <% end %>
  <% end %>
<% end %>
<script src="https://polyfill.io/v3/polyfill.min.js?features=es6"></script>
<script id="MathJax-script" async src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js"></script>

</body>
</html>
